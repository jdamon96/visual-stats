{
  "manifest_version": 3,
  "name": "Visual Stats",
  "version": "1.0",
  "description": "Visual Stats: See NBA players' career statistics on graphs. Compare points, assists, rebounds visually.",
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": ["scripting", "tabs", "sidePanel", "storage"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "icons": {
    "16": "icons/visual-stats-logo-16.png",
    "32": "icons/visual-stats-logo-32.png",
    "48": "icons/visual-stats-logo-48.png",
    "128": "icons/visual-stats-logo-128.png"
  }
}
